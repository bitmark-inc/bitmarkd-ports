#!/bin/sh

case "${2}" in
  (DEINSTALL)
    if [ -d "%%SCRIPTDIR%%" ]
    then
      cd "%%SCRIPTDIR%%" || exit 1
      rm -f .compiled .checked
      find . -name '*.pyc' -delete
      find ./static -name 'qui*' -delete
      rmdir ./static/css
#      rmdir ./static
    fi
    ;;

  (POST-DEINSTALL)
    true
    ;;

esac
