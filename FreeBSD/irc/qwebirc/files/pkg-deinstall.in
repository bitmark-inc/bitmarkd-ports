#!/bin/sh

case "${2}" in
  (DEINSTALL)
    if [ -d "%%SCRIPTDIR%%" ]
    then
      cd "%%SCRIPTDIR%%" || exit 1
      rm -f .compiled .checked
      find . -name '*.pyc' -delete
      find static -name 'qui*' -delete
      rm -f twisted/plugins/dropin.cache twistd.log
    fi
    ;;

  (POST-DEINSTALL)
    true
    ;;

esac
